.socials
  - auths.each do |auth|
    - if Auth::NETWORKS.values.include? auth.resource.class::NAME
      = link_to "#{ENV['APP_URL']}auth/#{auth.resource.class::NAME}?place=#{place.slug}", class: 'wifi_link' do
        - icon = place.social_network_icons.find_by(social_network: SocialNetwork.by_name(auth.resource.class::NAME))
        = image_tag icon ? icon.icon.url : "wifi/#{place.template}/#{auth.resource.class::NAME}.png"
