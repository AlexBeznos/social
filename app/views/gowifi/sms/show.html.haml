= form_tag("/wifi/#{@place.slug}/by_sms", id: 'manual', method: 'post', class: 'by_sms_form') do
  %input{ name: "code", placeholder: "#{t('wifi.sms_code_placeholder')}", required: "", type: "number" }
  %input{ type: "hidden", name: "id", value: @sms.id }
  %input{ type: "submit" }

= link_to t('wifi.sms_resend'), resend_gowifi_sm_path(@place, @sms), {id: 'resend_sms', remote: true, method: :post }
= javascript_include_tag "sms-auth"
