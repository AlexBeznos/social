!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = favicon_link_tag 'favicon.ico'
    %title
      = @place.name
      WiFi
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "wifi/modal", :media => "all"
    = stylesheet_link_tag "wifi/#{@place.template}/style", :media => "all"
    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "bootstrap-theme", :media => "all"
    = stylesheet_link_tag "wifi/poll_styling", :media => "all"
    = javascript_include_tag "wifi_enter"
    = render 'style', place: @place, customer: @customer if @place.style
  %body
    = render 'banner', place: @place if @place.display_other_banners && @banner
    .wrapper-out
      .wrapper-in
        .content
          = render 'header', place: @place, customer: @customer
          = render 'networks', place: @place, networks: @networks
          = render 'by_password', place: @place if @place.enter_by_password
          = render 'by_sms', place: @place if @place.sms_auth
          = render 'poll', place: @place if @place.polls_active && @place.polls.any?
          %br
          = link_to t('wifi.simple_enter'), "/wifi/#{@place.slug}/simple_enter", class: 'btn btn-primary btn-lg' if @place.simple_enter
          %br
          = render_stock_image @place

        %footer
          %p= t('wifi.footer')
          = link_to t('privacy_police.title'), page_path('privacy_policy')
    = javascript_include_tag "wifi/#{@place.template}"
    :javascript
      #{ raw @place.style.js_min if @place.style }
