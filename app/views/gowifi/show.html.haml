!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = favicon_link_tag 'favicon.ico'
    %title
      = @place.name
      WiFi
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "wifi/spinner", :media => "all"
    = stylesheet_link_tag "wifi/#{@place.template}/style", :media => "all"
    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "bootstrap-theme", :media => "all"
    %link{ :href => gowifi_place_path(:format => :css), :media => "all", :rel => "stylesheet" }

  %body
    .wrapper-out
      .wrapper-in
        .content
          - if @place.logo.file?
            = image_tag @place.logo.url, class: 'logo'
          - else
            %h1= @place.name
          %p
            - if @customer
              = t('wifi.greetings', customer_name: @customer.full_name).html_safe
            - else
              = t('wifi.greetings_to_no_one')
            %br
            = t('wifi.description').html_safe
          .socials
            - @networks.each do |network|
              - if network.name == 'facebook'
                = link_to '#new_person_modal', 'data-toggle' => 'modal', class: 'wifi_link' do
                  - icon = @place.social_network_icons.find_by(social_network_id: network.id)
                  - if icon
                    = image_tag icon.icon.url
                  - else
                    = image_tag "wifi/#{@place.template}/#{network.name}.png"
                #new_person_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
                  .modal-dialog
                    .modal-content
                      .modal-header
                        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
                        %h4#myModalLabel.modal-title Create new person
                      .modal-body
                        = render 'form'
                      .modal-footer
                        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
              - else
                = link_to "#{ENV['APP_URL']}auth/#{network.name}/", class: 'wifi_link' do
                  - icon = @place.social_network_icons.find_by(social_network_id: network.id)
                  - if icon
                    = image_tag icon.icon.url
                  - else
                    = image_tag "wifi/#{@place.template}/#{network.name}.png"
          - if @place.enter_by_password
            = form_tag("/wifi/#{@place.slug}/by_password", id: 'manual', method: 'post', class: 'password_form') do
              %input{:name => "password", :placeholder => "#{t('wifi.password_placeholder')}", :required => "", :type => "password"}/
              %input{:type => "submit", :value => ""}/
          - if @place.stocks_active && @stock
            = render_stock_image(@stock)

        %footer
          %p= t('wifi.footer')
          = link_to t('privacy_police.title'), page_path('privacy_policy')
    .loading{:hidden => "true"}
      .spinner
        .spinner-container.container1
          .circle1
          .circle2
          .circle3
          .circle4
        .spinner-container.container2
          .circle1
          .circle2
          .circle3
          .circle4
        .spinner-container.container3
          .circle1
          .circle2
          .circle3
          .circle4
    = javascript_include_tag "jquery", :media => "all"
    = javascript_include_tag "wifi/#{@place.template}"
    %script{ :src => gowifi_place_path(:format => :js) }
