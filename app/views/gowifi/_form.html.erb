<%= form_for(@message, url: "#{ENV['APP_URL']}auth/facebook/")  do |f| %>

    <div class="form-group">
      <%= image_tag(@message.image.url, size: "50x50") %>

      <%= f.label :image, class: 'control-label' %><br>
      <%= f.file_field :image, class: 'form-control', value: @message.message_link %>
      <span class="help-block"></span>
    </div>

    <div class="form-group">
      <%= f.label :message, class: 'control-label' %><br>
      <%= f.text_field :message, class: 'form-control', value: @message.message %>
      <span class="help-block"></span>
    </div>

    <div class="form-group">
      <%= f.label :message_link, class: 'control-label' %><br>
      <%= f.text_field :message_link, class: 'form-control', value: @message.message_link %>
      <span class="help-block"></span>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>

<% end %>