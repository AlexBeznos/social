<%- if @place.style %>
  <%= @place.style.css_min %>

  <%- if @place.style.background.exists? %>
    body {
      background: url("<%= @place.style.background.url %>") no-repeat center;
    }
  <% end %>

  <%- if @place.style.text_color %>
    .wrapper-out .wrapper-in .content p {
      color: <%= @place.style.text_color %>
    }
  <% end %>
  <%- if @place.style.greating_color %>
    .wrapper-out .wrapper-in .content p:first-line {
      color: <%= @place.style.greating_color %>
    }
  <% end %>
<% end %>
