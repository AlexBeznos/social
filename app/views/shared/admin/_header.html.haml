.wrapper
  %header.main-header
    %a.logo{:href => adm_root_path}
      %b Administration
    %nav.navbar.navbar-static-top{:role => "navigation"}
      %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
        %span.sr-only Toggle navigation
      .navbar-custom-menu
      %ul.nav.navbar-nav.pull-right
        %li
          = link_to user_session_path(current_user.id), method: 'DELETE' do
            Log out
            %i.fa.fa-sign-out
  %aside.main-sidebar
    %section.sidebar
      = render 'shared/admin/navigation'
