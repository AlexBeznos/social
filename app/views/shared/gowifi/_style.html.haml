- if place.style.background.present?
  :css
    body {
      background: url(#{place.style.background.url }) no-repeat center
    }
- if place.style.text_color && !place.style.text_color.empty?
  :css
    .content p {
      color: #{ place.style.text_color }
    }
    .content h1 {
      color: #{ place.style.text_color }
    }
    .content label {
      color: #{ place.style.text_color }
    }
- if place.style.greating_color && !place.style.greating_color.empty?
  :css
    .content p:first-line {
      color: #{ place.style.greating_color }
    }
- if place.style.line_colors && !place.style.line_colors.empty?
  :css
    .line_colors {
      background-color: #{ place.style.line_colors }
    }
:css
  #{ place.style.css_min }
