.col-sm-4.analysis-col
  .analysis-col-inner
    %h1
      = menu_item.name
  .analysis-col-inner
    .row.pic
      .col-xs-6.col-xs-offset-6
        = fa_icon 'users'
    .row.gender
      .col-xs-6
        = "Orders:"
      .col-xs-6
        %p
          = "all: "
          %span= menu_item.orders.size
        %p
          = "#{t("datetime.prompts.day")}: "
          %span= menu_item.orders_today
        %p
          = "#{t("datetime.prompts.week")}: "
          %span= menu_item.orders_this_week
        %p
          = "#{t("datetime.prompts.month")}: "
          %span= menu_item.orders_this_month
