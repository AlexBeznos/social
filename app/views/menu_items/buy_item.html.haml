!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = favicon_link_tag 'favicon.ico'
    %title= t('menu_item.successful_buy', menu_item_name: @menu_item.name)
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "bootstrap-theme", :media => "all"
    %link{ :href => menu_items_list_path(:format => :css), :media => "all", :rel => "stylesheet" }

  %body
    .container
      .row
        .col-md-12
          %nav.nav.navbar-inverse
            .container-fluid
              .col-md-offset-4.col-md-4
                %h3= link_to t('menu_item.to_internet'), @place.redirect_url
              .col-md-4
                %ul.nav.navbar-nav.navbar-right
                  %li
                    %h3= link_to t('menu_item.shopping_history'), history_path
      .row
        .col-md-12
          %h3= link_to t('menu_item.back_to_shopping'), menu_items_list_path
      .row
        .col-md-12.text-center
          %h3= t('menu_item.successful_buy', menu_item_name: @menu_item.name)
        .col-md-8.col-md-offset-2.bg-info
          %h3.text-center= t('menu_item.billed_account', item_price: @menu_item.price)
      .row.top-buffer
        .col-md-6
          .text-center= image_tag @menu_item.image.url
          %h3.text-center= @menu_item.name
        .col-md-6
          - if @place.loyalty_program
            %h3.text-center= t('menu_item.show_to_waiter')
            .col-md-offset-2.col-md-8.col-md-offset-2.bg-success
              %h3.text-center HA288ASD7
          - elsif @place.loyalty_program_without_codes
            %h3.text-center= t('menu_item.show_to_waiter')


