!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = favicon_link_tag 'favicon.ico'
    %title
      #{t('menu_item.greetings_short')}
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag :application
    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "bootstrap-theme", :media => "all"
    %link{ :href => menu_items_list_path(:format => :css), :media => "all", :rel => "stylesheet" }

  %body
    .container
      .row
        .col-md-12
          %nav.nav.navbar-inverse
            .container-fluid
              .col-md-offset-4.col-md-4
                %h3= link_to t('menu_item.to_internet'), @place.redirect_url
              .col-md-4
                %ul.nav.navbar-nav.navbar-right
                  %li
                    %h3= link_to t('menu_item.shopping_history'), history_path
      .inner
        = render 'shared/flash'
      .row
        .col-sm-12
          %h1.text-center= t('menu_item.greetings', customer_name: @customer.first_name)
        .col-sm-12
          %h1.text-center #{t('menu_item.added_bonus', place_score_amount: @place.score_amount)}
        .col-sm-12
          %h1.text-center #{t('menu_item.bonus_amount', customer_reputation_score: @reputation_score)}
        .col-sm-12
          %h2.text-center= t('menu_item.buy_with_bonuses')
      .row
        - @menu_items.each do |item|
          .col-xs-6.col-lg-4.text-center
            = image_tag item.image.url, class: 'text-center'
            %h2= item.name
            %h2= item.price
            = link_to 'Buy', buy_path(@place.slug, item.id), class: 'btn btn-success', data: { confirm: t('menu_item.confirm_order', item_price: item.price) }