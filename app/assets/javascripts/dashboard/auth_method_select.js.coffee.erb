$ ->
  methods = '<%= Auth::METHODS.map { |m| ".#{m.capitalize}Auth" }.join(", ") %>'
  select = '.authMethodSelect'

  showForm = (target) ->
    $(methods).hide()
    $(methods).find(":input").attr("disabled", true)

    if target.val()
      $(".#{target.val()}").show()
      $(".#{target.val()}").find(":input").attr("disabled", false)


  $(methods).hide()
  showForm($(select))

  $(select).on 'change', (e) ->
    showForm($(e.target))
