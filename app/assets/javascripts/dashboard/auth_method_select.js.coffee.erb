$ ->
  methods = '<%= Auth::METHODS.map { |m| ".#{m.capitalize}Auth" }.join(", ") %>'
  select = '.authMethodSelect'
  static_input = [".btn-default", ".btn-default input", ".select", "#auth_redirect_url"].join(", ")

  showForm = (target) ->
    $(methods).hide()
    #$(":input").attr("disabled", true)
    $(static_input).attr("disabled", false)

    if target.val()
      $(".#{target.val()}").show()
      $(".#{target.val()} :input").attr("disabled", false)


  $(methods).hide()
  showForm($(select))

  $(select).on 'change', (e) ->
    showForm($(e.target))
