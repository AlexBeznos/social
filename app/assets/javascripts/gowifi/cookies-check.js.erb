$(document).ready(function() {
  toastr.options = {
    "closeButton": true,
    "debug": false,
    "progressBar": true,
    "preventDuplicates": false,
    "positionClass": "toast-top-right",
    "onclick": null,
    "showDuration": "4000",
    "hideDuration": "10000",
    "timeOut": "7000",
    "extendedTimeOut": "10000",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
  };

  if (!navigator.cookieEnabled) {
    toastr["warning"]("<%= I18n.t('errors.messages.cookies') %>", "Cookies");
  };
});
